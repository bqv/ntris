CC   = gcc

OBJ  = 4DTris_main.o \
       4DTris_AI.o \
       4DTris_engine.o

LIBS =  -lGL \
        -lGLU \
        -lglut \
        -lm

BIN  = 4DTRIS

$(BIN): $(OBJ)
	$(CC) $(OBJ) -o "$(BIN)" $(LIBS)

4DTris_main.o: 4DTris_main.c
	$(CC) -c 4DTris_main.c -o 4DTris_main.o

4DTris_AI.o: 4DTris_AI.c
	$(CC) -c 4DTris_AI.c -o 4DTris_AI.o

4DTris_engine.o: 4DTris_engine.c
	$(CC) -c 4DTris_engine.c -o 4DTris_engine.o
